{
  "trigger": {
    "prefix": ["trigger"],
    "description": "A table trigger.",
    "body": [
      "${1:trigger}:",
      "\ttype: trigger.${2|before,after|}",
      "\thandler:",
      "\t\tcode: ${3:source}",
      "\toperation: ${4:Table}.${5|create,update,delete|}"
    ]
  },
  "resolver": {
    "prefix": ["resolver"],
    "description": "A custom resolver.",
    "body": [
      "${1:resolver}:",
      "\ttype: resolver",
      "\thandler:",
      "\t\tcode: ${2:source}",
      "\tschema: ${3:schema}"
    ]
  },
  "task": {
    "prefix": ["task"],
    "description": "A task.",
    "body": [
      "${1:task}:",
      "\ttype: task",
      "\thandler:",
      "\t\tcode: ${2:source}"
    ]
  },
  "schedule": {
    "prefix": ["schedule"],
    "description": "A scheduled task.",
    "body": [
      "${1:scheduledTask}:",
      "\ttype: task",
      "\thandler:",
      "\t\tcode: ${2:source}",
      "\tschedule: ${3:schedule}"
    ]
  },
  "webhook": {
    "prefix": ["webhook"],
    "description": "A custom resolver.",
    "body": [
      "${1:webhook}:",
      "\ttype: webhook",
      "\thandler:",
      "\t\tcode: ${2:source}",
      "\tmethod: ${3|POST,GET,PUT,DELETE|}"
    ]
  }
}
